{
    "name": "makaira/oxid-connect-essential",
    "description": "Module for OXID eShop to connect it with Makaira.",
    "type": "oxideshop-module",
    "license": "GPL-3.0-or-later",
    "homepage": "https://makaira.io/",
    "authors": [
        {
            "name": "Stefan Krenz",
            "email": "sk@marmalade.group"
        }
    ],
    "conflict": {
        "makaira/oxid-connect": "*",
        "makaira/oxid-connect-compat": "*"
    },
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "makaira/shared-libs": "^2021.11 | ^2022.1",
        "symfony/http-foundation": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "phpmd/phpmd": "^2.0",
        "phpstan/phpstan": "^1.5",
        "oxid-esales/oxideshop-ce": "^v6.10",
        "oxid-esales/oxideshop-unified-namespace-generator": "^v2.2"
    },
    "autoload": {
        "psr-4": {
            "Makaira\\OxidConnectEssential\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Makaira\\OxidConnectEssential\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "@phpcs",
            "@phpunit"
        ],
        "phpunit": [
            "phpunit -c phpunit.xml"
        ],
        "phpcs": [
            "phpcs --standard=PSR12 src/"
        ],
        "phpmd": [
            "phpmd src/ ansi cleancode"
        ],
        "phpstan": [
            "phpstan"
        ]
    },
    "extra": {
        "oxideshop": {
            "target-directory": "makaira/oxid-connect-essential"
        }
    },
    "config": {
        "allow-plugins": {
            "oxid-esales/oxideshop-unified-namespace-generator": true,
            "oxid-esales/oxideshop-composer-plugin": false
        }
    }
}
